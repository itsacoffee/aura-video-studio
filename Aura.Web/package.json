{
  "name": "aura.web",
  "version": "1.0.0",
  "type": "module",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "dev": "vite --open",
    "build": "npm run build:prod",
    "build:dev": "vite build --mode development",
    "build:prod": "npm run type-check && vite build --mode production",
    "build:clean": "node -e \"require('fs').rmSync('dist', { recursive: true, force: true })\" && npm run build",
    "build:analyze": "npm run build:prod && open dist/stats.html",
    "prebuild": "node ../scripts/build/validate-environment.js",
    "postbuild": "node ../scripts/build/verify-build.js",
    "validate": "npm run type-check && npm run lint",
    "validate:clean-install": "npm ci && node ../scripts/build/validate-environment.js",
    "validate:dependencies": "npm audit && npm outdated",
    "validate:full": "npm run validate:clean-install && npm run quality-check && npm test && node ../scripts/audit/find-placeholders.js",
    "validate:scripts": "node ../scripts/test-validation.js",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "lint:css": "stylelint \"src/**/*.css\"",
    "lint:css:fix": "stylelint \"src/**/*.css\" --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,css,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,css,json}\"",
    "type-check": "tsc --noEmit",
    "typecheck": "tsc --noEmit",
    "quality-check": "npm run type-check && npm run lint && npm run lint:css && npm run format:check",
    "quality-fix": "npm run lint:fix && npm run lint:css:fix && npm run format",
    "quality-report": "node scripts/code-quality-report.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage --config vitest.config.coverage.ts",
    "test:coverage:ci": "vitest run --coverage --config vitest.config.coverage.ts --reporter=verbose --reporter=json --reporter=html",
    "test:unit": "vitest run --coverage",
    "test:integration": "vitest run tests/integration --coverage",
    "test:smoke": "vitest run tests/smoke --coverage",
    "playwright": "playwright test",
    "playwright:ui": "playwright test --ui",
    "playwright:install": "playwright install --with-deps chromium",
    "docs": "typedoc",
    "docs:watch": "typedoc --watch",
    "generate:api-types": "node scripts/generate-api-types.js",
    "release:version": "node ../scripts/release/update-version.js",
    "release:notes": "node ../scripts/release/generate-release-notes.js",
    "prepare": "node scripts/setup-git-hooks.cjs"
  },
  "dependencies": {
    "@ffmpeg/ffmpeg": "^0.12.10",
    "@ffmpeg/util": "^0.12.1",
    "@fluentui/react-components": "^9.47.0",
    "@fluentui/react-icons": "^2.0.239",
    "@microsoft/signalr": "9.0.6",
    "@tanstack/react-query": "5.90.6",
    "@tanstack/react-query-devtools": "5.90.2",
    "axios": "^1.6.5",
    "framer-motion": "12.23.24",
    "fuse.js": "7.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.49.3",
    "react-router-dom": "^6.21.0",
    "react-virtuoso": "^4.14.1",
    "react-window": "^2.2.1",
    "recharts": "3.3.0",
    "wavesurfer.js": "^7.8.12",
    "zod": "^3.22.4",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@types/react-window": "^1.8.8",
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "@typescript-eslint/parser": "^6.18.1",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.16",
    "axios-mock-adapter": "^2.1.0",
    "eslint": "^8.56.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-sonarjs": "^3.0.5",
    "husky": "^9.1.7",
    "jsdom": "^27.0.0",
    "lint-staged": "^16.2.6",
    "openapi-fetch": "0.15.0",
    "openapi-typescript": "7.10.1",
    "postcss": "^8.4.33",
    "prettier": "^3.1.1",
    "rollup-plugin-visualizer": "^6.0.5",
    "stylelint": "^16.25.0",
    "stylelint-config-standard": "^39.0.1",
    "tailwindcss": "^3.4.1",
    "terser": "^5.44.0",
    "typedoc": "^0.25.0",
    "typescript": "^5.3.3",
    "vite": "^6.4.1",
    "vite-plugin-compression": "^0.5.1",
    "vitest": "^3.2.4"
  }
}
