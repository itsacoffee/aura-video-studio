{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  
  "Database": {
    "Provider": "SQLite",
    "SQLitePath": "aura.db",
    "ConnectionString": ""
  },
  
  "ConnectionStrings": {
    "PostgreSQL": "Host=localhost;Port=5432;Database=aura;Username=aura_user;Password=your_password_here;Include Error Detail=true",
    "Hangfire": ""
  },
  
  "Hangfire": {
    "SQLitePath": "hangfire.db"
  },
  
  "Caching": {
    "Enabled": true,
    "UseRedis": false,
    "RedisConnection": "localhost:6379,abortConnect=false",
    "DefaultTtlMinutes": 60
  },
  
  "FFmpeg": {
    "ExecutablePath": "",
    "SearchPaths": [
      "/usr/bin",
      "/usr/local/bin",
      "C:\\Program Files\\ffmpeg\\bin",
      "C:\\ffmpeg\\bin"
    ],
    "RequireMinimumVersion": "4.0"
  },
  
  "CircuitBreaker": {
    "FailureThreshold": 5,
    "OpenDuration": 60,
    "HalfOpenDuration": 30
  },
  
  "Providers": {
    "OpenAI": {
      "ApiKey": "",
      "Organization": "",
      "BaseUrl": "https://api.openai.com/v1"
    },
    "Ollama": {
      "BaseUrl": "http://127.0.0.1:11434",
      "Model": "llama3.1:8b-q4_k_m",
      "MaxRetries": 2,
      "TimeoutSeconds": 120,
      "EnableAutoDetection": true,
      "FallbackToOpenAI": true
    }
  },
  
  "LlmCache": {
    "UseDiskStorage": false,
    "CachePath": "",
    "MaxCacheSizeMb": 1024,
    "TtlMinutes": 1440
  },
  
  "LlmPrewarm": {
    "Enabled": false,
    "PrewarmOnStartup": false,
    "CommonPrompts": []
  },
  
  "RAG": {
    "Embedding": {
      "Provider": "Local",
      "ApiKey": "",
      "BaseUrl": "",
      "ModelName": "all-MiniLM-L6-v2",
      "DimensionSize": 384
    }
  },
  
  "LlmTimeouts": {
    "ScriptGeneration": 120,
    "PlanGeneration": 60,
    "Default": 30
  },
  
  "IpRateLimiting": {
    "EnableEndpointRateLimiting": true,
    "StackBlockedRequests": false,
    "RealIpHeader": "X-Real-IP",
    "ClientIdHeader": "X-ClientId",
    "HttpStatusCode": 429,
    "GeneralRules": [
      {
        "Endpoint": "*",
        "Period": "1m",
        "Limit": 60
      },
      {
        "Endpoint": "*",
        "Period": "1h",
        "Limit": 1000
      }
    ]
  },
  
  "Authentication": {
    "Enabled": false,
    "ApiKey": "",
    "RequireHttps": false
  },
  
  "Monitoring": {
    "EnableApplicationInsights": false,
    "ApplicationInsightsConnectionString": "",
    "EnableMetricsExport": true,
    "MetricsExportIntervalSeconds": 60
  },
  
  "CloudStorage": {
    "Enabled": false,
    "Provider": "Azure",
    "Azure": {
      "ConnectionString": "",
      "ContainerName": "aura-exports"
    },
    "AWS": {
      "AccessKey": "",
      "SecretKey": "",
      "Region": "us-east-1",
      "BucketName": "aura-exports"
    }
  }
}
