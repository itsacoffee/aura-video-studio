{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Aura": "Debug"
    },
    "Console": {
      "FormatterName": "simple",
      "FormatterOptions": {
        "SingleLine": true,
        "IncludeScopes": true
      }
    }
  },
  "ConnectionStrings": {
    "Default": "Data Source=data/aura.db;Mode=ReadWriteCreate;Cache=Shared;"
  },
  "Redis": {
    "Configuration": "localhost:6379",
    "InstanceName": "aura-dev:"
  },
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://0.0.0.0:5005"
      }
    }
  },
  "AllowedHosts": "*",
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:3000",
      "http://localhost:5173",
      "http://127.0.0.1:3000",
      "http://127.0.0.1:5173"
    ]
  },
  "Swagger": {
    "Enabled": true,
    "Title": "Aura Video Studio API",
    "Version": "v1",
    "Description": "Local Development API"
  },
  "Providers": {
    "Video": {
      "FfmpegPath": "/usr/bin/ffmpeg"
    }
  },
  "Features": {
    "EnableDetailedErrors": true,
    "EnableSeedData": true
  }
}
