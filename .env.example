# Aura Video Studio - Local Development Environment Variables
# Copy this file to .env and fill in your values
# All variables are prefixed with AURA_ to avoid conflicts

# =============================================================================
# CORE API CONFIGURATION
# =============================================================================

# Database Configuration
# SQLite database file path (relative to API container)
AURA_DATABASE_PATH=/app/data/aura.db

# Redis Configuration
# Redis connection string for caching and session management
AURA_REDIS_CONNECTION=redis:6379

# API Configuration
# ASPNETCORE_ENVIRONMENT: Development, Staging, or Production
ASPNETCORE_ENVIRONMENT=Development
ASPNETCORE_URLS=http://+:5005

# Logging Configuration
# Log levels: Trace, Debug, Information, Warning, Error, Critical
AURA_LOG_LEVEL=Information

# CORS Configuration (comma-separated origins)
AURA_ENABLE_CORS=true
AURA_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# =============================================================================
# FFMPEG CONFIGURATION
# =============================================================================

# Path to FFmpeg binary (inside container)
# For local development, use the ffmpeg service or local installation
AURA_FFMPEG_PATH=/usr/bin/ffmpeg

# =============================================================================
# PROVIDER API KEYS (Optional - for paid features)
# =============================================================================

# OpenAI API Key (for GPT-4, GPT-3.5-turbo)
# Get your key from: https://platform.openai.com/api-keys
# Required for: Script generation, content refinement
AURA_OPENAI_API_KEY=

# Anthropic API Key (for Claude models)
# Get your key from: https://console.anthropic.com/
# Required for: Alternative LLM provider
AURA_ANTHROPIC_API_KEY=

# Stability AI API Key (for Stable Diffusion image generation)
# Get your key from: https://platform.stability.ai/
# Required for: AI-powered image generation
AURA_STABILITY_API_KEY=

# Runway API Key (for AI video generation)
# Get your key from: https://runwayml.com/
# Required for: AI-powered video generation
AURA_RUNWAY_API_KEY=

# =============================================================================
# STOCK MEDIA PROVIDER API KEYS (Optional - for stock media search)
# =============================================================================

# Pixabay API Key (free tier available)
# Get your key from: https://pixabay.com/api/docs/
# Required for: Stock photo and video search
AURA_PIXABAY_API_KEY=

# Pexels API Key (free tier available)
# Get your key from: https://www.pexels.com/api/
# Required for: Stock photo and video search
AURA_PEXELS_API_KEY=

# Unsplash API Key (free tier available)
# Get your key from: https://unsplash.com/developers
# Required for: Stock photo search
AURA_UNSPLASH_API_KEY=

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Offline Mode (disables all external API calls)
# Set to true to run without internet connectivity
AURA_OFFLINE_MODE=false

# Enable Advanced Mode by default
AURA_ENABLE_ADVANCED_MODE=false

# Enable ML Lab features
AURA_ENABLE_ML_LAB=true

# Enable Telemetry and Analytics
AURA_ENABLE_TELEMETRY=false

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Enable detailed error messages and stack traces
AURA_ENABLE_DETAILED_ERRORS=true

# Enable Swagger/OpenAPI documentation
AURA_ENABLE_SWAGGER=true

# Hot reload for frontend development
AURA_HOT_RELOAD=true

# =============================================================================
# PERFORMANCE TUNING
# =============================================================================

# Maximum concurrent video render jobs
AURA_MAX_CONCURRENT_RENDERS=2

# Maximum concurrent LLM requests
AURA_MAX_CONCURRENT_LLM_REQUESTS=5

# LLM cache configuration
AURA_LLM_CACHE_ENABLED=true
AURA_LLM_CACHE_MAX_ENTRIES=1000
AURA_LLM_CACHE_TTL_SECONDS=3600

# =============================================================================
# CLOUD STORAGE (Optional - for export)
# =============================================================================

# AWS S3 Configuration
AURA_AWS_S3_BUCKET=
AURA_AWS_S3_REGION=us-east-1
AURA_AWS_ACCESS_KEY=
AURA_AWS_SECRET_KEY=

# Azure Blob Storage Configuration
AURA_AZURE_CONTAINER=
AURA_AZURE_CONNECTION_STRING=

# Google Cloud Storage Configuration
AURA_GCS_BUCKET=
AURA_GCS_PROJECT_ID=
AURA_GCS_CREDENTIALS_JSON=

# =============================================================================
# SECURITY
# =============================================================================

# JWT Secret for authentication (generate a random string for production)
# You can generate a secure key with: openssl rand -base64 32
AURA_JWT_SECRET=dev-secret-change-in-production

# API Rate Limiting
AURA_RATE_LIMIT_REQUESTS_PER_MINUTE=100

# CORS allowed methods
AURA_CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS

# =============================================================================
# DOCKER CONFIGURATION
# =============================================================================

# Docker compose project name (to avoid conflicts)
COMPOSE_PROJECT_NAME=aura-video-studio

# Docker network configuration
AURA_NETWORK_NAME=aura-network

# =============================================================================
# NOTES
# =============================================================================
# 
# 1. FREE TIER: Aura works out-of-the-box without any API keys using:
#    - Rule-based script generation
#    - Windows TTS (or local TTS engines)
#    - Stock media from free providers
#    - Local FFmpeg for rendering
#
# 2. PRO TIER: Add API keys above to unlock:
#    - GPT-4 powered script generation
#    - AI image generation (Stable Diffusion)
#    - AI video generation (Runway)
#    - Premium stock media
#
# 3. SECURITY: Never commit this file with real API keys!
#    Keep secrets in .env (which is gitignored)
#
# 4. DEFAULT PASSWORDS: All default passwords in this file are intentionally
#    insecure and documented as such. Change them for production use.
#
