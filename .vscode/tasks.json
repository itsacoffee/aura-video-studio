{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "start-all-services",
      "type": "shell",
      "command": "make dev-detached",
      "problemMatcher": [],
      "group": "none",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "stop-all-services",
      "type": "shell",
      "command": "make stop",
      "problemMatcher": [],
      "group": "none"
    },
    {
      "label": "build-api",
      "type": "process",
      "command": "dotnet",
      "args": [
        "build",
        "${workspaceFolder}/Aura.Api/Aura.Api.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile",
      "group": "build"
    },
    {
      "label": "build-tests",
      "type": "process",
      "command": "dotnet",
      "args": [
        "build",
        "${workspaceFolder}/Aura.Tests/Aura.Tests.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile",
      "group": "build"
    },
    {
      "label": "clean-api",
      "type": "process",
      "command": "dotnet",
      "args": [
        "clean",
        "${workspaceFolder}/Aura.Api/Aura.Api.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile",
      "group": "build"
    },
    {
      "label": "start-web-dev",
      "type": "shell",
      "command": "npm",
      "args": ["run", "dev"],
      "options": {
        "cwd": "${workspaceFolder}/Aura.Web"
      },
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^([^\\s].*)\\((\\d+|\\d+,\\d+|\\d+,\\d+,\\d+,\\d+)\\):\\s+(error|warning|info)\\s+(TS\\d+)\\s*:\\s*(.*)$",
          "file": 1,
          "location": 2,
          "severity": 3,
          "code": 4,
          "message": 5
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^.*Local:.*$",
          "endsPattern": "^.*ready in.*$"
        }
      },
      "group": "build"
    },
    {
      "label": "test-api",
      "type": "shell",
      "command": "dotnet",
      "args": ["test", "--no-build"],
      "options": {
        "cwd": "${workspaceFolder}/Aura.Tests"
      },
      "problemMatcher": "$msCompile",
      "group": "test"
    },
    {
      "label": "test-web",
      "type": "shell",
      "command": "npm",
      "args": ["run", "test"],
      "options": {
        "cwd": "${workspaceFolder}/Aura.Web"
      },
      "problemMatcher": [],
      "group": "test"
    },
    {
      "label": "test-e2e",
      "type": "shell",
      "command": "npm",
      "args": ["run", "playwright"],
      "options": {
        "cwd": "${workspaceFolder}/Aura.Web"
      },
      "problemMatcher": [],
      "group": "test"
    },
    {
      "label": "docker-logs-api",
      "type": "shell",
      "command": "make logs-api",
      "problemMatcher": [],
      "isBackground": true,
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    {
      "label": "docker-logs-web",
      "type": "shell",
      "command": "make logs-web",
      "problemMatcher": [],
      "isBackground": true,
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    {
      "label": "docker-logs-all",
      "type": "shell",
      "command": "make logs",
      "problemMatcher": [],
      "isBackground": true,
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    {
      "label": "health-check",
      "type": "shell",
      "command": "make health",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "db-migrate",
      "type": "shell",
      "command": "make db-migrate",
      "problemMatcher": [],
      "group": "none"
    },
    {
      "label": "db-reset",
      "type": "shell",
      "command": "make db-reset",
      "problemMatcher": [],
      "group": "none"
    },
    {
      "label": "lint-web",
      "type": "shell",
      "command": "npm",
      "args": ["run", "lint"],
      "options": {
        "cwd": "${workspaceFolder}/Aura.Web"
      },
      "problemMatcher": ["$eslint-stylish"],
      "group": "none"
    },
    {
      "label": "format-web",
      "type": "shell",
      "command": "npm",
      "args": ["run", "format"],
      "options": {
        "cwd": "${workspaceFolder}/Aura.Web"
      },
      "problemMatcher": [],
      "group": "none"
    },
    {
      "label": "type-check-web",
      "type": "shell",
      "command": "npm",
      "args": ["run", "type-check"],
      "options": {
        "cwd": "${workspaceFolder}/Aura.Web"
      },
      "problemMatcher": ["$tsc"],
      "group": "build"
    }
  ]
}
